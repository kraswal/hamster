@model Portfolio
@{
    ViewData["Title"] = "Создать портфель";
    Layout = null;
}

<div class="row">
    <div class="col-12">
        <form asp-action="Create" onsubmit="return jQueryAjaxPost(this);" autocomplete="off">
            <div class="form-group">
                <label asp-for="PortfolioName"></label>
                <span asp-validation-for="PortfolioName"></span>
                <div class="input-group">
                    <input asp-for="PortfolioName" class="form-control" placeholder="Введите название портфеля" required autofocus />
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Commission"></label>
                        <span asp-validation-for="Commission"></span>
                        <div class="input-group">
                            <input asp-for="Commission" class="form-control" placeholder="Введите комиссию" required autofocus />
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <label asp-for="Cost"></label>
                    <span asp-validation-for="Cost"></span>
                    <div class="input-group">
                        <input asp-for="Cost" class="form-control" placeholder="Введите стоимость" required autofocus />
                    </div>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Добавить портфель" class="btn btn-dark btn-block" />
            </div>
        </form>
    </div>
</div>