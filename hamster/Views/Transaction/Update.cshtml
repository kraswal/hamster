@model Transaction
@{
    ViewData["Title"] = "Create";
}

<h1>Обновить операцию</h1>
<form asp-action="Update" method="post">
    <input asp-for="TransactionId" hidden />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-3">
            <label asp-for="AssetName"></label>
        </div>
        <div class="col-3">
            <label asp-for="TransactionAmount"></label>
        </div>
        <div class="col-3">
            <label asp-for="TransactionPrice"></label>
        </div>
        <div class="col-3">
            <label asp-for="TransactionComission"></label>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-3">
            <input asp-for="AssetName" class="form-control" readonly />
            <input asp-for="TransactionId" hidden />
        </div>
        <div class="col-3">
            <input asp-for="TransactionAmount" class="form-control" readonly />
        </div>
        <div class="col-3">
            <input asp-for="TransactionPrice" class="form-control" readonly />
        </div>
        <div class="col-3">
            <input asp-for="TransactionComission" class="form-control" autofocus />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-12 row">
            <div class="col">
                <input type="submit" value="Обновить данные" class="btn btn-info w-75" />
            </div>
            <div class="col text-right">
                <a asp-controller="Transaction" asp-action="Index" class="btn btn-dark w-25">Back</a>
            </div>
        </div>
    </div>
</form>

