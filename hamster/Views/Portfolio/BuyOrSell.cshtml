@model ShareAccountModel

@{
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="BuyOrSell" onsubmit="return jQueryAjaxPost(this);" autocomplete="off">
            <div class="form-group">
                <label asp-for="Transaction.AssetName"></label>
                <span asp-validation-for="Transaction.AssetName" class="text-danger"></span>
                <div class="input-group">
                    <select asp-for="Transaction.AssetName" class="form-control custom-select" required="required" autofocus>
                        <option label="Выберите актив" disabled selected></option>
                        @foreach (var share in Model.Shares)
                        {
                            <option>@share.ShareName</option>
                        }
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Transaction.TransactionType"></label>
                        <span asp-validation-for="Transaction.TransactionType"></span>
                        <div class="input-group">
                            <select asp-for="Transaction.TransactionType" class="form-control custom-select" required autofocus>
                                <option label="Выберите тип сделки" disabled selected></option>
                                <option value="@TransactionType.Покупка">Покупка</option>
                                <option value="@TransactionType.Продажа">Продажа</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Transaction.TransactionAmount"></label>
                        <span asp-validation-for="Transaction.TransactionAmount" class="text-danger"></span>
                        <div class="input-group">
                            <input asp-for="Transaction.TransactionAmount" class="form-control" placeholder="Введите количество" min="1" required autofocus />
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Transaction.TransactionPrice"></label>
                        <span asp-validation-for="Transaction.TransactionPrice" class="text-danger"></span>
                        <div class="input-group">
                            <input asp-for="Transaction.TransactionPrice" class="form-control" placeholder="Введите цену" required autofocus />
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Transaction.TransactionComission"></label>
                        <span asp-validation-for="Transaction.TransactionComission" class="text-danger"></span>
                        <div class="input-group">
                            <input asp-for="Transaction.TransactionComission" class="form-control" placeholder="Введите комиссию" value="@(ViewBag.DefaultCommission * 100)" autofocus />
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Transaction.TransactionDate"></label>
                        <span asp-validation-for="Transaction.TransactionDate" class="text-danger"></span>
                        <div class="input-group">
                            <input asp-for="Transaction.TransactionDate" class="form-control" required autofocus />
                        </div>
                    </div>
                </div>
            </div>
            <div class="row "style="margin-bottom: -20px;">
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="input-group text-right">
                            <input asp-for="Transaction.Internal" type="checkbox" class="custom-checkbox" style="margin-top: 7px; margin-right: 10px; margin-left: 5px;" />
                            <label class="form-check-label">Использовать средства в портфеле?</label>
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Добавить сделку" class="btn btn-dark btn-block" />
            </div>
        </form>
    </div>
</div>