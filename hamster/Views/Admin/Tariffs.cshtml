@model IEnumerable<Tariff>
@{
    ViewData["Title"] = "Тарифы";
    Layout = "_adminLayout";
}
<h1>Тарифы</h1>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-12 text-right">
            <a asp-controller="Admin" asp-action="CurrencyCreate" class="btn btn-primary">Добавить тариф</a>
        </div>
    </div>
    <br />
    @if(Model.Count() > 0)
    {


<table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr class="text-center">
                    <th>
                        Брокер
                    </th>
                    <th>
                        Название тарифа
                    </th>
                    <th>
                        Оплата
                    </th>
                    <th>
                        Комиссия
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tariff in Model)
                {
                     <tr class="text-center">
                        <td width="20%">@tariff.BrokerName</td>
                        <td width="20%">@tariff.TariffName</td>
                        <td width="20%">@(tariff.Cost + "  ₽")</td>
                        <td width="20%">@(tariff.Commission * 100 + "%")</td>
                        <td>
                            <div class="btn-group w-100" role="group">
                                <a asp-controller="Share" asp-action="Buy" asp-route-id="@tariff.TariffId" class="btn btn-primary mx-1">Update</a>
                                <a asp-controller="Share" asp-action="Withdraw" asp-route-id="@tariff.TariffId" class="btn btn-danger mx-1">Delete</a>
                            </div>
                        </td>
                     </tr>
                }
            </tbody>
        </table>
    }
</div> 
