@model IEnumerable<CurrencyPair>
@{
    ViewData["Title"] = "Валютные пары";
    Layout = "_adminLayout";
}

<h1>Валютные пары</h1>

<div class="container p-3">
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr class="text-center">
                    <th>
                        Валютная пара
                    </th>
                    <th>
                        Покупаемая валюта
                    </th>
                    <th>
                        Валюта рассчета
                    </th>
                    <th>
                        Курс
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var currencyPair in Model)
                {
                    <tr>
                        <td width="20%" class="text-center">@(currencyPair.CurrencyPairName.Insert(3, "/"))</td>
                        <td width="20%" class="text-center">@currencyPair.BuyCurrencyName</td>
                        <td width="20%" class="text-center">@currencyPair.PayCurrencyName</td>
                        <td width="20%" class="text-center">@(Math.Round(currencyPair.Rate, 4) + " " + currencyPair.PayCurrencySign)</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>